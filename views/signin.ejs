<%- include ("head.ejs") %>
    <h1>Sign In here</h1>

    <% if (locals.errs) { %>
        <% for (let err of locals.errs) { %>
                <div><%= err.msg %></div><br>
            <% } %>
    <% } %>

    <% if (locals.dbRes) { %>
        <strong> <%= dbRes %></strong>
    <% } %>

    <form method="POST">
        <p>
            <label for="username">
                    Username : <input name="username" placeholder="username">
            </label>
        </p>

        <p>
            <label for="password">
                    Password : <input name="password" placeholder="password">
            </label>
        </p>

        <input type="hidden" name="csrf_token" value="<%= locals.csrf_token || 'null' %>" >

        <button>Sign In</button>
    </form>

    <style>
        body{
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        div{
            background-color: maroon;
            color: rgb(255, 246, 247);
        }
        strong{
            background-color: red;
            color : white;
            padding : 10px;
        }
    </style>
<%- include ("foot.ejs") %>